<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/newblue2"
        android:background="@drawable/base_circle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEPSIS APP"
        android:layout_marginTop="20dp"
        android:textColor="@color/newblue2"
        android:layout_below="@id/applogo"
        android:gravity="center"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_below="@id/applogo"
        android:orientation="vertical"
        android:background="@drawable/top_round_rect"
        android:backgroundTint="@color/transwhite"
        android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_id"
            app:tabGravity="fill"
            android:layout_width="match_parent"
            app:tabIndicator="@drawable/top_round_rect"
            app:tabIndicatorAnimationDuration="400"
            app:tabIndicatorColor="@color/newblue2"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/colorAccent"
            android:background="@color/white"
            android:layout_height="wrap_content">

        </com.google.android.material.tabs.TabLayout>
        <!--<androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_id"
            android:background="@color/newblue2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>-->
        <LinearLayout
            android:id="@+id/viewpager_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/newblue2"
            android:padding="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/sign_name_layout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_person_black_24dp"
                    android:backgroundTint="@color/white"/>
                <EditText
                    android:id="@+id/sign_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:hint="Name"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sign_reg_layout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_perm_contact_calendar_black_24dp"
                    android:backgroundTint="@color/white"/>
                <EditText
                    android:id="@+id/sign_reg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:hint="Patient ID"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white" />
            </LinearLayout>
            <!--<LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_call_black_24dp"
                    android:backgroundTint="@color/white"/>
                <EditText
                    android:id="@+id/sign_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:hint="Phone Number"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white" />
            </LinearLayout>-->
            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/male_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="30dp"
                    android:text="MALE"/>
                <RadioButton
                    android:id="@+id/female_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"
                    android:text="FEMALE"/>

            </RadioGroup>
            <Button
                android:id="@+id/sign_inup"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGNIN"
                android:textSize="20sp"
                android:textColor="@color/newblue2"
                android:backgroundTint="@color/gray"
                android:background="@drawable/white_rect_full2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>